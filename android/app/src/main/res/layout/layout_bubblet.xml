<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/root_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/collapseView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/lnMenuCollapse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDD835"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imvCapture"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/button_background"
                    android:scaleType="center"
                    android:src="@mipmap/ic_capture" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#000000" />

                <ImageView
                    android:id="@+id/imvConvertExpand"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/button_background"
                    android:scaleType="center"
                    android:src="@mipmap/ic_convert" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#000000" />

                <ImageView
                    android:id="@+id/imvCloseCollapse"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/button_background"
                    android:scaleType="center"
                    android:src="@mipmap/ic_close" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#000000" />

                <ImageView
                    android:id="@+id/imvRefresh"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/button_background"
                    android:scaleType="center"
                    android:src="@mipmap/ic_refresh" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/imvMinus"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/button_background"
                    android:src="@mipmap/ic_minus" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#000000" />

                <ImageView
                    android:id="@+id/imvPlus"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/button_background"
                    android:src="@mipmap/ic_plus" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnCapture"
                android:layout_width="match_parent"
                android:layout_height="470dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/my_border"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/expandView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/lnMenuExpand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FDD835"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imvSearch"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/button_background"
                    android:src="@mipmap/ic_search" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#000000" />

                <ImageView
                    android:id="@+id/imvConvertCollapese"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/button_background"
                    android:src="@mipmap/ic_convert" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#000000" />

                <ImageView
                    android:id="@+id/imvCloseExpand"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/button_background"
                    android:src="@mipmap/ic_close" />

                <TextView
                    android:id="@+id/tvTimer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical|center_horizontal|center"
                    android:paddingRight="16sp"
                    android:text="00 : 00"
                    android:textColor="#0000ff"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnAnylist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/question_border">

                        <TextView
                            android:id="@+id/tvQuestion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:lines="3"
                            android:textColor="#ff0000"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/answer_border">

                            <TextView
                                android:id="@+id/tvAnsA"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:lines="1"
                                android:paddingLeft="4dp"
                                android:textColor="#0000ff"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/answer_border">

                            <TextView
                                android:id="@+id/tvAnsAKey"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:gravity="left"
                                android:lines="1"
                                android:paddingLeft="4dp"
                                android:textColor="#0000ff"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/answer_border">

                            <TextView
                                android:id="@+id/tvAnsANormal"
                                android:layout_width="48dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:gravity="left"
                                android:lines="1"
                                android:paddingLeft="4dp"
                                android:textColor="#0000ff"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/answer_border">

                            <TextView
                                android:id="@+id/tvAnsB"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:lines="1"
                                android:paddingLeft="4dp"
                                android:textColor="#0000ff"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/answer_border">

                            <TextView
                                android:id="@+id/tvAnsBKey"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:gravity="left"
                                android:lines="1"
                                android:paddingLeft="4dp"
                                android:textColor="#0000ff"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/answer_border">

                            <TextView
                                android:id="@+id/tvAnsBNormal"
                                android:layout_width="48dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:gravity="left"
                                android:lines="1"
                                android:paddingLeft="4dp"
                                android:textColor="#0000ff"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/answer_border">

                            <TextView
                                android:id="@+id/tvAnsC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:lines="1"
                                android:paddingLeft="4dp"
                                android:textColor="#0000ff"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/answer_border">

                            <TextView
                                android:id="@+id/tvAnsCKey"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:gravity="left"
                                android:lines="1"
                                android:paddingLeft="4dp"
                                android:textColor="#0000ff"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/answer_border">

                            <TextView
                                android:id="@+id/tvAnsCNormal"
                                android:layout_width="48dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:gravity="left"
                                android:lines="1"
                                android:paddingLeft="4dp"
                                android:textColor="#0000ff"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#000000">

                    <ImageView
                        android:id="@+id/imvConfetti"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/question_border"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvStatistic"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <ListView
                        android:id="@+id/lvSplitResult"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible" />
</FrameLayout>
